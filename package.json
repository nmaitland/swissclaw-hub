{

  "name": "swissclaw-hub",

  "version": "1.0.0",

  "description": "Shared dashboard for Neil and SwissClaw",

  "main": "server/index.js",

  "scripts": {

    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",

    "server": "node dist/server/index.js",

    "server:dev": "nodemon --exec ts-node server/index.ts",

    "server:build": "tsc -p tsconfig.json",

    "client": "cd client && npm start",

    "build": "npm run server:build && cd client && npm run build",

    "start": "npm run server",

    "install-all": "npm install && cd client && npm install",

    "test": "jest",

    "test:watch": "jest --watch",

    "test:coverage": "jest --coverage",
    "test:coverage:combined": "npm run test:unit -- --coverage && npm run test:integration -- --coverage --collectCoverageFrom='!tests/unit/**' --forceExit",
    "test:unit": "jest --testPathIgnorePatterns=tests/integration --forceExit",

    "test:integration": "jest --testPathPatterns=tests/integration --runInBand --forceExit",

    "test:client": "cd client && npm test",

    "db:migrate": "npx sequelize-cli db:migrate",

    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",

    "db:migrate:test": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",

    "db:seed": "npx sequelize-cli db:seed:all",

    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",

    "db:setup:test": "cross-env NODE_ENV=test npx sequelize-cli db:migrate && cross-env NODE_ENV=test npx sequelize-cli db:seed:all",

    "db:reset:test": "cross-env NODE_ENV=test npx sequelize-cli db:migrate:undo:all && cross-env NODE_ENV=test npx sequelize-cli db:migrate && cross-env NODE_ENV=test npx sequelize-cli db:seed:all",

    "lint": "eslint server",

    "lint:fix": "eslint server --ext .ts,.js --fix && eslint client/src --ext .ts,.tsx,.js,.jsx --fix",

    "format": "prettier --write \"server/**/*.{ts,js,json}\" \"client/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",

    "type-check": "tsc --noEmit"

  },

  "dependencies": {

    "bcrypt": "^5.1.1",

    "cors": "^2.8.5",

    "dotenv": "^16.3.1",

    "express": "^4.18.2",

    "express-rate-limit": "^7.1.5",

    "helmet": "^7.1.0",

    "pg": "^8.18.0",

    "pg-hstore": "^2.3.4",

    "sequelize": "^6.37.7",

    "socket.io": "^4.7.2",

    "uuid": "^9.0.0"

  },

  "devDependencies": {

    "@testing-library/jest-dom": "^6.9.1",

    "@testing-library/react": "^16.3.2",

    "@testing-library/user-event": "^14.6.1",

    "@types/bcrypt": "^5.0.2",

    "@types/cors": "^2.8.19",

    "@types/express": "^4.17.25",

    "@types/pg": "^8.16.0",

    "@types/uuid": "^9.0.7",

    "concurrently": "^8.2.0",

    "cross-env": "^10.1.0",

    "eslint": "^10.0.0",

    "jest": "^30.2.0",

    "jest-environment-jsdom": "^30.2.0",

    "nodemon": "^3.0.1",

    "sequelize-cli": "^6.6.5",

    "supertest": "^7.2.2",

    "ts-jest": "^29.4.6",

    "ts-node": "^10.9.2"

  },

  "engines": {

    "node": ">=18.0.0"

  }

}

