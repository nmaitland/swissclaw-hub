{

  "name": "swissclaw-hub",

  "version": "1.0.0",

  "description": "Shared dashboard for Neil and SwissClaw",

  "main": "server/index.ts",

  "scripts": {

    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",

    "server": "node dist/server/index.js",

    "server:dev": "nodemon --exec ts-node server/index.ts",

    "server:build": "tsc -p tsconfig.json",

    "client": "cd client && npm start",

    "build": "npm run server:build && cd client && npm run build",

    "start": "npm run db:migrate && npm run server",

    "install-all": "npm install && cd client && npm install",

    "test": "jest",

    "test:watch": "jest --watch",

    "test:coverage": "jest --coverage --runInBand --forceExit",

    "test:with-db": "cross-env NODE_ENV=test TEST_DB_HOST=localhost TEST_DB_PORT=5433 TEST_DB_NAME=swissclaw_hub_test TEST_DB_USER=postgres TEST_DB_PASSWORD=password jest --runInBand --forceExit",

    "test:unit": "jest --testPathIgnorePatterns=tests/integration --coverage=false --forceExit",

    "test:integration": "jest --testPathPatterns=tests/integration --runInBand --forceExit",

    "test:client": "cd client && npm test",

    "lint": "eslint server/",

    "lint:fix": "eslint server/ --fix",

    "format": "prettier --write \"server/**/*.{ts,js,json}\" \"client/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",

    "type-check": "tsc --noEmit",

    "mcp": "ts-node server/mcp-server.ts",

    "db:migrate": "cross-env NODE_ENV=production sequelize-cli db:migrate",

    "db:migrate:test": "cross-env NODE_ENV=test sequelize-cli db:migrate",

    "db:seed": "sequelize-cli db:seed:all",

    "db:seed:test": "cross-env NODE_ENV=test sequelize-cli db:seed:all",

    "db:reset": "sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate && sequelize-cli db:seed:all",

    "db:reset:test": "cross-env NODE_ENV=test sequelize-cli db:drop && cross-env NODE_ENV=test sequelize-cli db:create && cross-env NODE_ENV=test sequelize-cli db:migrate && cross-env NODE_ENV=test sequelize-cli db:seed:all"

  },

  "dependencies": {

    "@modelcontextprotocol/sdk": "^1.26.0",

    "@types/bcrypt": "^5.0.2",

    "@types/cors": "^2.8.19",

    "@types/express": "^4.17.25",

    "@types/pg": "^8.16.0",

    "@types/swagger-jsdoc": "^6.0.4",

    "@types/swagger-ui-express": "^4.1.8",

    "@types/uuid": "^9.0.7",

    "bcrypt": "^5.1.1",

    "cors": "^2.8.5",

    "dotenv": "^16.3.1",

    "express": "^4.18.2",

    "express-rate-limit": "^7.1.5",

    "helmet": "^7.1.0",

    "pg": "^8.18.0",

    "pino": "^10.3.1",

    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.5",

    "socket.io": "^4.7.2",

    "swagger-jsdoc": "^6.2.8",

    "swagger-ui-express": "^5.0.1",

    "uuid": "^9.0.0"

  },

  "devDependencies": {

    "@testing-library/jest-dom": "^6.9.1",

    "@testing-library/react": "^16.3.2",

    "@testing-library/user-event": "^14.6.1",

    "concurrently": "^8.2.0",

    "cross-env": "^10.1.0",

    "eslint": "^9.39.2",

    "jest": "^30.2.0",

    "jest-environment-jsdom": "^30.2.0",

    "nodemon": "^3.0.1",

    "pino-pretty": "^13.1.3",

    "supertest": "^7.2.2",

    "ts-jest": "^29.4.6",

    "ts-node": "^10.9.2",

    "typescript": "^5.9.3",

    "typescript-eslint": "^8.55.0"

  },

  "engines": {

    "node": ">=18.0.0"

  }

}
